{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@truetale/types": ["packages/types/src/index.ts"],
      "@truetale/db": ["packages/db/src/index.ts"],
      "@truetale/utils": ["packages/utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "dist", ".next"]
}
